<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.rongcloud.im.niko.widget.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/setting" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_person"
            app:item_content="@string/setting_person_info" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_notification"
            app:item_content="@string/setting_notification" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_hobby"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_hobby"
            app:item_content="@string/setting_hooby_manage" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_contact"
            app:item_content="@string/setting_contact_friend" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_modify_pwd"
            app:item_content="@string/setting_modify_pwd" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_company"
            app:item_content="@string/setting_company_contact" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_clear"
            app:item_content="@string/setting_clear_cache" />

        <cn.rongcloud.im.niko.widget.SettingItemView
            android:id="@+id/siv_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seal_mine_setting_item_height"
            app:item_right_image="@drawable/img_item_setting_enter"
            app:item_image="@drawable/img_setting_logout"
            app:item_content="@string/setting_logout" />


    </LinearLayout>
</ScrollView>