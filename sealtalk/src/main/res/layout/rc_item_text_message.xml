<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<!--&lt;!&ndash;    android:id="@android:id/text1"&ndash;&gt;-->
<!--    style="@style/RCTheme.Message.TextView"-->

    <io.rong.imkit.widget.AutoLinkTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/text"
        android:textSize="14sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="web|email|phone"
        android:gravity="center_vertical|left"
        android:textColorLink="@color/white"
        android:textColor="@color/white"
        app:RCMaxWidth="223dp"
        android:padding="10dp"
        android:layout_marginBottom="4dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_like_left"
        android:layout_below="@+id/text"
        android:src="@drawable/img_chat_like"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_like_right"
        android:layout_alignEnd="@+id/text"
        android:layout_below="@+id/text"
        android:src="@drawable/img_chat_like"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_left"
        android:layout_toRightOf="@+id/iv_like_left"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_left1"
            android:layout_marginLeft="22dp"
            android:background="#ff0000"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ImageView
            android:id="@+id/iv_left2"
            android:layout_marginLeft="11dp"
            android:background="#00ff00"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ImageView
            android:id="@+id/iv_left3"
            android:background="#0000ff"
            android:layout_width="16dp"
            android:layout_height="16dp"/>



    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_right"
        android:layout_toLeftOf="@+id/iv_like_right"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_right1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#ff0000" />
        <ImageView
            android:layout_marginLeft="-5dp"
            android:id="@+id/iv_right2"
            android:background="#00ff00"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ImageView
            android:layout_marginLeft="-5dp"
            android:id="@+id/iv_right3"
            android:background="#0000ff"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </LinearLayout>
</RelativeLayout>
