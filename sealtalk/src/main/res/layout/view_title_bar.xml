<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContainer"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/white"
    android:orientation="vertical">


   
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ivBack"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@drawable/seal_ic_title_back"
       />
<!--    android:src="@drawable/img_white_back"-->

    <androidx.appcompat.widget.AppCompatTextView
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/sp_16" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:visibility="gone"
        android:id="@+id/ivRight"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@drawable/seal_ic_title_more"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_6"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="gone"
        android:gravity="center"
        android:enabled="false"
        android:text="@string/submit"
        android:id="@+id/tvRight"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_26"
        android:layout_centerVertical="true"
        android:background="@drawable/title_right_bg_selector"
        android:textColor="@drawable/title_right_tv_selector"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_12"/>

    <View
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</RelativeLayout>